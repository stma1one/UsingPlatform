<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MVVMSample.ViewModels"
             x:DataType="viewModels:ToyDetailsPageViewModel"
             x:Class="MVVMSample.Views.ToyDetailsPage"
             Title="ToyDetailsPage">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Image  IsAnimationPlaying="true"  Source="{Binding SelectedImage}"
                   HeightRequest="200" WidthRequest="200"
                   Aspect="AspectFit"
                   HorizontalOptions="Center" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ChangePhotoCommand}"></TapGestureRecognizer>
                </Image.GestureRecognizers>
            </Image>

            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding SelectedToy.Name, FallbackValue='לא נקבע שם'}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />

                    <Label 
                           FontSize="18" 
                           TextColor="Green" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="מחיר: "/>
                                <Span Text="{Binding SelectedToy.Price, FallbackValue='אין מחיר'}"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label
                           FontSize="16" >
                        <Label.FormattedText>
                        <FormattedString>
                            <Span Text="סוג: "/>
                            <Span Text="{Binding SelectedToy.Type.Name, FallbackValue='סוג צעצוע'}"/>
                        </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label Text="{Binding SecondHandStatus}" 
                           FontSize="16" />

                    <Label Text="{Binding Id}" FontSize="16"/>
                </VerticalStackLayout>

                
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>